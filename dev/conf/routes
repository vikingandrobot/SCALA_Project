
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

GET     /join                       controllers.UserController.joinPage
POST    /join                       controllers.UserController.join

GET     /login                      controllers.UserController.loginPage
POST    /login                      controllers.UserController.login

GET     /events                     controllers.EventController.eventPage
GET     /events/:id                 controllers.EventController.eventDetail(id:Long)

GET     /themes                     controllers.ThemeController.getThemes

GET     /organizations                     controllers.OrganizationController.getOrganizations

# TEST du controller
GET     /interests                  controllers.InterestController.getInterests
GET     /interest/insert            controllers.InterestController.insertInterestPage
POST    /interest/insert            controllers.InterestController.insert
GET     /interest/delete            controllers.InterestController.deleteInterestPage
POST    /interest/delete            controllers.InterestController.delete
GET     /interest/find              controllers.InterestController.findPage
POST    /interest/find              controllers.InterestController.find

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)



      